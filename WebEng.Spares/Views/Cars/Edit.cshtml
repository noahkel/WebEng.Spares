@model WebEng.ReplacementParts.Data.Car

@{
    ViewData["Title"] = "Edit | " + Model.Name;
}

<div class="product-essential container">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Key" />
            <!--End For version 1, 2, 6 -->
            <!-- For version 3 -->
            <div class="product-img-box col-lg-5 col-sm-5 col-xs-12">
                <div class="product-image">
                    @if (Model.PictureUrl == null || Model.PictureUrl == "")
                    {
                        <div class="product-full"> <img id="product-zoom1" src="~/images/missing.jpg" data-zoom-image="~/images/missing.jpg" alt="product-image"> </div>
                    }
                    else
                    {
                        <div class="product-full"> <img id="product-zoom1" src="@Model.PictureUrl" data-zoom-image="@Model.PictureUrl" alt="product-image"> </div>
                    }
                </div>
            </div>
            <!--End For version 1,2,6-->
            <!-- For version 3 -->
            <div class="product-shop col-lg- col-sm-7 col-xs-12">
                <div class="brand">@Model.Brand</div>
                <div class="product-name">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="spec-row" id="summarySpecs">
                    <h2>Specifications</h2>
                    <table width="100%">
                        <tbody>
                            <tr>
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Description) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr class="odd">
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Started) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Started" class="form-control" />
                                        <span asp-validation-for="Started" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr class="odd">
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Finished) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Finished" class="form-control" />
                                        <span asp-validation-for="Finished" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Weight) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Weight" class="form-control" />
                                        <span asp-validation-for="Weight" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Brand) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <select asp-for="BrandFK" class="form-control" asp-items="ViewBag.BrandFK"></select>
                                        <span asp-validation-for="BrandFK" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" />
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
