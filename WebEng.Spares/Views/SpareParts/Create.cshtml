@model WebEng.ReplacementParts.Models.SparePart

@{
    ViewData["Title"] = "Create";
}

<div class="product-essential container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--End For version 1, 2, 6 -->
            <!-- For version 3 -->
            <div class="product-img-box col-lg-5 col-sm-5 col-xs-12">
                <div class="product-image">
                    <div class="product-full"> <img id="product-zoom1" src="~/images/missing.jpg" data-zoom-image="~/images/missing.jpg" alt="product-image"> </div>
                </div>
            </div>
            <!--End For version 1,2,6-->
            <!-- For version 3 -->
            <div class="product-shop col-lg- col-sm-7 col-xs-12">
                <div class="product-name">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="spec-row" id="summarySpecs">
                    <h2>Specifications</h2>
                    <table width="100%">
                        <tbody>
                            <tr>
                                <td class="label-spec"> OEM-Part-Number <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <label asp-for="OEMKey" class="control-label"></label>
                                        <select asp-for="OEMKey" class="form-control" asp-items="ViewBag.OEMKey"></select>
                                    </div>
                                </td>
                            </tr>
                            <tr class="odd">
                                <td class="label-spec"> Manufacturer <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <label asp-for="ManufacturerKey" class="control-label"></label>
                                        <select asp-for="ManufacturerKey" class="form-control" asp-items="ViewBag.ManufacturerKey"></select>
                                    </div>
                                </td>
                            </tr>
                            <tr class="odd">
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Description) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Price) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="label-spec"> @Html.DisplayNameFor(model => model.Weight) <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Weight" class="form-control" />
                                        <span asp-validation-for="Weight" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="label-spec"> Units Available <span class="coln">:</span></td>
                                <td class="value-spec">
                                    <div class="form-group">
                                        <input asp-for="Available" class="form-control" />
                                        <span asp-validation-for="Available" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" />
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}